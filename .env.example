# Discord webhook URLs for notifications
# Each platform sends to its own channel - no shared/general webhook needed
DISCORD_WEBHOOK_CRAIGSLIST=https://discord.com/api/webhooks/your-craigslist-webhook
DISCORD_WEBHOOK_FACEBOOK=https://discord.com/api/webhooks/your-facebook-webhook

# Location settings
LOCATION_ZIP=43215
LOCATION_RADIUS_MILES=100

# Price range
MIN_PRICE=0
MAX_PRICE=1000

# How often to check for new listings (in seconds)
CHECK_INTERVAL_SECONDS=60

# File paths (relative to script directory)
DATABASE_FILE=couchfinder.db
LOG_FILE=couchfinder.log
BROWSER_DATA_DIR=browser_data

# Set to true to run browser in headless mode (no visible window)
# Keep false for initial setup to allow manual Facebook login
HEADLESS=false
